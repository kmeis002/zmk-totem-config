            //                                     ┃           ┃    TAB    ┃    SPC    ┃   ┃   ENTER   ┃   BSPC    ┃           ┃
            //                                     ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛   ┗━━━━━━━━━━━┻━━━━━━━━━━━┻━━━━━━━━━━━┛

            bindings = <
            &kp Q  &kp W  &kp E         &kp R            &kp T             &kp Y      &kp U       &kp I      &kp O    &kp P
            &kp A  &kp S  &kp D         &kp F            &kp G             &kp H      &kp J       &kp K      &kp L    &kp SEMICOLON
&kp LSHIFT  &kp Z  &kp X  &kp C         &kp V            &kp B             &kp N      &kp M       &kp COMMA  &kp DOT  &kp SLASH      &mt RSHFT ESCAPE
                          &kp LEFT_GUI  &lt 1 BACKSPACE  &mt LALT ENTER    &kp SPACE  &lt 2 CAPS  &kp RCTRL
            >;
